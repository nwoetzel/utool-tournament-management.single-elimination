<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ExpandableListView
        android:id="@+id/expandableRoundsList"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_above="@+id/addPlayersBtn"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/matchup_to_standings" >
    </ExpandableListView>

    <Button
        android:id="@+id/removePlayersBtn"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Remove Player" />

    <Button
        android:id="@+id/addPlayersBtn"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_above="@+id/removePlayersBtn"
        android:layout_alignParentLeft="true"
        android:text="Add Player" />

    <Button
        android:id="@+id/modifyMatchupsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addPlayersBtn"
        android:layout_alignTop="@+id/addPlayersBtn"
        android:layout_toRightOf="@+id/removePlayersBtn"
        android:text="Modify Matchups" />

    <Button
        android:id="@+id/startTournamentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/modifyMatchupsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/modifyMatchupsBtn"
        android:layout_alignTop="@+id/removePlayersBtn"
        android:text="Start" />

    <TextView
        android:id="@+id/mathcups_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/matchup_to_standings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Standings" />

    <TextView
        android:id="@+id/tvRoundTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mathcups_name"
        android:layout_alignBottom="@+id/mathcups_name"
        android:layout_toLeftOf="@+id/matchup_to_standings"
        android:text="5555" />

</RelativeLayout>