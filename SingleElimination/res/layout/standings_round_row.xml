<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TextView
        android:id="@+id/match_round"
        android:layout_width="50dp"
        android:layout_height="74dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:background="#101010"
        android:gravity="center"
        android:text=" 1 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/match_round"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/match_round"
        android:background="#0F1410"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />



    <TextView
        android:id="@+id/score_one_round"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="112345"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:background="#0F1410"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/name_one_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/score_one_round"
        android:layout_toRightOf="@+id/prof_pic_one"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="John W. Smithy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/name_two_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/name_one_round"
        android:layout_alignRight="@+id/name_one_round"
        android:layout_alignTop="@+id/textView5"
        android:gravity="center_vertical"
        android:text="John W. Smithy dioaoid oiajsdiaoda"
        android:singleLine = "true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/score_two_round"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:gravity="center"
        android:singleLine="true"
        android:layout_marginRight="5dp"
        android:text="12.7"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />



    <ImageView
        android:id="@+id/prof_pic_one"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:src="@drawable/silhouette" />

    <ImageView
        android:id="@+id/prof_pic_two"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:src="@drawable/silhouette" />

</RelativeLayout>