<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TextView
        android:id="@+id/order_by_match_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/round_number"
        android:text="Match"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <ListView
        android:id="@+id/round_standings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/order_by_match_round" >
    </ListView>

    <TextView
        android:id="@+id/order_by_name_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_by_match_round"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@+id/order_by_match_round"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/frameLayout_round_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/round_standings_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#333333" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="238dp"
            android:layout_height="106dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Click on a column header to order the players by that column."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ok_column"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="80dp"
            android:text="Ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frameLayout_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/round_standings_list"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#333333" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="238dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="This screen displays player specific statistics for a single round."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ok_screen"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginLeft="80dp"
            android:text="Ok" />
    </RelativeLayout>

    <TextView
        android:id="@+id/round_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Round "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/round_standings_round_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/round_number"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/order_by_score_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/round_standings_list"
        android:layout_alignParentRight="true"
        android:text="Score  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

</RelativeLayout>